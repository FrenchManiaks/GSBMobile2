<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.falconteam.www.projetgsb.GestionFraisFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Selectionnez le type de frais"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sTypeFrais"
            android:layout_marginTop="36dp"
            android:text="Selectionnez la date"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etMontantFrais"
            android:layout_marginTop="50dp"
            android:text="Commentaire (Optionnel)"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etDateFrais"
            android:layout_marginTop="33dp"
            android:text="Selectionnez le montant"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sTypeFrais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/etDateFrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="date"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etMontantFrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etDateFrais"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etCommentaireFrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etMontantFrais"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/bEnvoyerFrais"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Envoyer" />
    </RelativeLayout>
</FrameLayout>
